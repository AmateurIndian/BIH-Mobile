<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.noob.yusuf.bih.MainActivity"
    android:background="#ffffff"
    android:gravity="center">

    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="false"
        tools:context="com.noob.yusuf.bih.PersonInfo">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="center">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/mainTitle"
                android:gravity="center"
                android:weightSum="1"
                android:layout_weight="0.8">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgMainTitle"
                    android:src="@drawable/title"
                    android:maxHeight="@dimen/activity_vertical_margin"
                     />


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:baselineAligned="false"
                android:weightSum="1"
                android:background="#ffffff"
                android:gravity="center"
                android:layout_weight="0.20"
                >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:weightSum="1.5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingTop="30dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:id="@+id/reg"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/imgMainReg"
                            android:src="@drawable/registration"
                            android:maxHeight="@dimen/activity_vertical_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Registration"
                            android:id="@+id/txtMainReg" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:id="@+id/bih"
                        android:gravity="center"
                        android:paddingBottom="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/imgMainBih"
                            android:src="@drawable/bih"
                            android:maxHeight="@dimen/activity_vertical_margin"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="BIH Web"
                            android:id="@+id/txtMainBih" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/utilities"
                        android:gravity="center"
                        android:layout_weight="0.5"
                        android:paddingBottom="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/imgMainUtil"
                            android:src="@drawable/util"
                            android:maxHeight="@dimen/activity_vertical_margin"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Utilities"
                            android:id="@+id/txtMainUtil" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.50"
                    android:weightSum="1.5"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingTop="30dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:id="@+id/dorm"
                        android:gravity="center"
                        android:paddingBottom="30dp"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/imgMainDorm"
                            android:src="@drawable/dorm"
                            android:maxHeight="@dimen/activity_vertical_margin" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Dorms"
                            android:id="@+id/txtMainDorm" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:id="@+id/life"
                        android:gravity="center"
                        android:paddingBottom="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/imgMainLife"
                            android:src="@drawable/life"
                            android:maxHeight="@dimen/activity_vertical_margin"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Bilkent Life"
                            android:id="@+id/txtMainLife" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:id="@+id/contact"
                        android:gravity="center"
                        android:paddingBottom="30dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:id="@+id/imgMainContact"
                            android:src="@drawable/contact"
                            android:maxHeight="@dimen/activity_vertical_margin"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Contact"
                            android:id="@+id/txtMainContact" />
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>



        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="@dimen/fab_margin"
            app:fabSize="mini"
            android:src="@android:drawable/ic_dialog_info" />

    </android.support.design.widget.CoordinatorLayout>
</RelativeLayout>
